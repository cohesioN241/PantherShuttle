<?xml version="1.0" encoding="utf-8"?>
<TableLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/tableLayout1"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:shrinkColumns="*"  
    android:stretchColumns="*">  
    
    <TableRow  
        android:id="@+id/row1"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">  
        <TextView  
            android:id="@+id/title"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:textStyle="bold"  
            android:typeface="serif"  
            android:textSize="18dp"  
            android:text="Next Panther Shuttle Stops\n"  
            android:gravity="center"  
            android:layout_span="3" />  
    </TableRow>  
    <TableRow  
        android:id="@+id/row2"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent">  
        <TextView  
            android:id="@+id/nextstop"  
            android:text="Next Stop"
            android:textStyle="bold"
            android:typeface="serif" />  
        <TextView  
            android:id="@+id/arrives"  
            android:text="Arrives In..."  
            android:textStyle="bold"  
            android:typeface="serif"
            android:layout_span="2" />  
    </TableRow>  
    <TableRow  
        android:layout_height="wrap_content"  
        android:id="@+id/row3"  
        android:layout_width="match_parent">  
        <TextView  
            android:text=""  
            android:id="@+id/nextOne"  
            android:textStyle="bold" />  
        <TextView  
            android:text="" />  
        <TextView  
            android:text=""  
            android:id="@+id/nextOneTime"  
            android:gravity="center_horizontal" />
    </TableRow>  
    <TableRow  
        android:layout_height="wrap_content"  
        android:id="@+id/row4"  
        android:layout_width="match_parent">  
        <TextView  
            android:text=""  
            android:id="@+id/nextTwo"  
            android:textStyle="bold" />  
        <TextView  
            android:text="" />  
        <TextView  
            android:text=""  
            android:id="@+id/nextTwoTime"  
            android:gravity="center_horizontal" />
    </TableRow>  
    <TableRow  
        android:layout_height="wrap_content"  
        android:id="@+id/row5"  
        android:layout_width="match_parent">  
        <TextView  
            android:text=""  
            android:id="@+id/nextThree"  
            android:textStyle="bold" />  
        <TextView  
            android:text="" />  
        <TextView  
            android:text=""  
            android:id="@+id/nextThreeTime"  
            android:gravity="center_horizontal" />
    </TableRow>  
    

</TableLayout>